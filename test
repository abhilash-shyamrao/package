CREATE TABLE audit_log (
    audit_id SERIAL PRIMARY KEY, -- Unique identifier for each log entry
    transaction_id UUID NOT NULL, -- Unique identifier for a transaction
    table_name VARCHAR(255) NOT NULL, -- Name of the table where change occurred
    column_name VARCHAR(255) NOT NULL, -- Name of the column that changed
    old_value TEXT, -- Old value of the column
    new_value TEXT, -- New value of the column
    changed_on TIMESTAMP NOT NULL DEFAULT NOW(), -- Timestamp of the change
    changed_by VARCHAR(255) -- User or process that made the change
);
