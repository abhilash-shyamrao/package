CREATE TABLE data_quality_config_attribute (
    dq_config_attr_id SERIAL PRIMARY KEY,
    dq_config_id INT,
    skip_after_holiday_flg BOOLEAN,
    send_email_flg BOOLEAN,
    email_address VARCHAR(255),
    email_result_status VARCHAR(50),
    get_latest_file_flg BOOLEAN,
    tags TEXT,
    failed_records_enabled BOOLEAN,
    failed_records_path VARCHAR(255),
    failed_records_justification TEXT,
    failed_records_override BOOLEAN,
    failed_records_count INT,
    created_date TIMESTAMP,
    created_by VARCHAR(50),
    updated_by VARCHAR(50),
    updated_date TIMESTAMP,
    
    CONSTRAINT fk_dq_config
        FOREIGN KEY (dq_config_id)
        REFERENCES dqc_schema.data_quality_config(dq_config_id)
        ON DELETE CASCADE
);
